---
page_classes: 'category'
layout: 'page_layout'
---
<% url = current_page.url.split("/") %>
<% my_locale = url[1] %>
<% category_id ||= nil %>
<% fetch_locale = current_page.url.split('/')%>
<%= partial "partials/header" %>
<%= partial "partials/search" %>

<div class="container reveal">
  <%= partial "partials/left_menu", locals: { category_id: page.last.category&.en&.sys&.id } %>
  <div class="content">

    <ul class="breadcrumbs">
      <li><a href="<%= localize_url(current_page.url, locale_id: locale_obj[:id]) %>">Help</a></li>

      <!-- TODO -->
      <li><a href="<%= localize_url(help_category_url_slug(page[:category]) %>"><%= category[:category_name] %></a></li>

      <% if page.last[:parent_page]%>
        <li class="breadcrumb-extra">
          <a href="<%=BreadcrumbHelper::parent_slug(data, page, current_page.url)%>">
            <%=BreadcrumbHelper::parent(data, page)%>
          </a>
      </li>
      <%end%>
      <li class="breadcrumb-extra"><%=BreadcrumbHelper::child(page)%></li>
    </ul>

    <label for="selector" class="selector selector_redirect locale">
      <select>
        <% CategoryHelper::navigation_menu_structure(data).each do |cat| %>
          <% category = cat.first.last%>

          <optgroup label="<%= category[:name] %>">

            <% category[:pages].each do |page| %>
              <% category_url = "#{my_locale}/#{page[:page_url]}" %>

              <% if url.length == 2 %>
                <% if page[:content][:en] %>
                  <option value="<%=category_url%>/" <% if url.length == 3 %><% if "#{category_url}/" == "/#{url[1]}/#{url.last}/" %>selected<%end%><%end%>><%=page[:page_title]%></option>
                <%end%>
              <% elsif page[:content]['en-AU'] && my_locale == "au"%>
                <option value="<%=category_url%>/" <% if url.length == 3 %><% if "#{category_url}/" == "/#{url[1]}/#{url.last}/" %>selected<%end%><%end%>><%=page[:page_title]%></option>
              <% elsif page[:content]['en-NZ'] && my_locale == "nz"%>
                <option value="<%=category_url%>/" <% if url.length == 3 %><% if "#{category_url}/" == "/#{url[1]}/#{url.last}/" %>selected<%end%><%end%>><%=page[:page_title]%></option>
                <% else %>
                <option value="<%=category_url%>/" <% if url.length == 3 %><% if "#{category_url}/" == "/#{url[1]}/#{url.last}/" %>selected<%end%><%end%>><%=page[:page_title]%></option>
              <%end%>
            <%end%>
          </optgroup>
        <%end%>
      </select>
    </label>

    <article class="article">
      <h1><%=page.last.title&.en&.to_s%></h1>
      <% if locale_content(page) %>
        <%= Kramdown::Document.new(locale_content(page).gsub('.png)', '.png?w=917)').gsub('.jpg)', '.jpg?w=917)')).to_html.html_safe %>
      <%end%>

      <p class="date_modified">Last modified on <%= page.last_updated_at %> UTC</p>
      <script>
        var get_headings = document.getElementsByTagName('table');
      </script>
    </article>
  </div>

</div>

<%= partial "partials/footer" %>
